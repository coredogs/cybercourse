          'class' => array('swimx-editor swimx-editor-summary'),
        ),
        '#prefix' => '<div class="swimx-summary-wrapper">',
        '#suffix' => '</div>',
        '#weight' => -10,
        '#attached' => array(
          'js' => array(drupal_get_path('module', 'swimx') 
                  . '/js/swim_summary_links.js'),
        ),
      ) + $base;
    } //End with_summary
  }
  return $element;
}

