        '#description' => t('Leave blank to use trimmed value of full text as the summary.'),
        //Remove grippie.
        '#resizable' => FALSE,
        '#default_value' => 
          isset( $items[$delta]['wysiwyg_rep_summary'] ) 
            ? $items[$delta]['wysiwyg_rep_summary'] : '',
